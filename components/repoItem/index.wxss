/* components/repoItem/index.wxss */
view {
  font-size: 0;
}
text {
  font-size: 30rpx;
  line-height: 32rpx;
}
.inlineBlock {
  display: inline-block;
}
.repoItem {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
}

.repo_name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.repo_name .repo_avatar {
  flex-shrink: 0;
  flex-grow: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.repo_name .repo_detail {
  margin-left: 40rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  word-break: break-all;
}

.repo_name .repo_detail .repo_project_name {
  color: #0366d6;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 600;
}

.repo_name .repo_detail .repo_mainLag {
  color: #586069;
  line-height: 32rpx;
}

.repo_name .repo_detail .circle_label {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  position: relative;
  top: 3rpx;
  margin-right: 10rpx;
}

.repo_name .repo_stars {
  flex-shrink: 0;
  flex-grow: 0;
  min-width: 120rpx;
  text-align: right;
  margin-left: 20rpx;
}

.repo_name .repo_stars .star_img {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.repo_name .repo_stars text {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #586069;
}

.repo_name .repo_stars .repo_star_btn {
  width: 100rpx;
  height: 40rpx;
  padding: 0 5rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

.repo_desc {
  margin: 20rpx 0 0 0;
}
.repo_desc text {
  color: #586059;
  font-size: 30rpx;
  line-height: 32rpx;
}
.repo_topic {
}

.repo_topic .topic_item {
  display: inline-block;
  background-color: #f1f8ff;
  color: #0366d6;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.repo_other_info {
  margin-top: 20rpx;
}

.repo_other_info text {
  color: #586059;
  font-size: 24rpx;
  line-height: 28rpx;
}

.repo_other_info .license {
  margin-right: 20rpx;
}
