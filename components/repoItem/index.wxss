/* components/repoItem/index.wxss */
.repoItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  margin-top: 40rpx;
  border-bottom: 1px solid #ccc;
}

.repoItem:first-child {
  margin-top: 0;
}
.repo_avatar {
  flex-shrink: 0;
  flex-grow: 0;
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
  border-radius: 50%;
}
.repo_desc {
  flex-grow: 1;
}
